<view class="paper-top"><view class="paper-nums">您答对<text>{{paperInfo.right_num}}/{{questionList.length}}</text>道题</view><view class="paper-clock">您的得分:<text>{{paperInfo.score}}分</text></view></view><view class="paper-body" wx:for="{{questionList}}" wx:for-item="parentitem"><view wx:if="{{parentitem.user_answer==parentitem.right_answer}}" class="paper-title"><text>{{index+1}}、</text>{{parentitem.question}}({{parentitem.rightanswer}})</view><view wx:else class="paper-title"><text class="sequence">{{index+1}}、</text>{{parentitem.question}}(<text class="error_answer">{{parentitem.useranswer}}</text>)<image class="icon_exam" src="/img/exam_error.png"></image>(<text class="right_error">{{parentitem.rightanswer}}</text>)<image class="icon_exam" src="/img/exam_correct.png"></image></view><view class="answer-list" wx:for="{{parentitem.answers}}" wx:for-item="subitem">{{subitem.sequence}}、{{subitem.answer}}</view></view>