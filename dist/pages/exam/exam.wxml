<block wx:if="{{isview}}"><form bindsubmit="questionSubmit"><view class="paper-top"><view class="paper-nums">总计<text>{{questionList.length}}</text>道题</view><view class="paper-clock">倒计时<text>{{remainTime}}</text></view><button formType="submit" class="paper-submit">交卷</button></view><view class="{{index==questionIndex?'paper-body':'paper-body none'}}" wx:for="{{questionList}}" wx:for-item="parentitem"><view class="paper-title"><text>{{index+1}}、</text><text class="question-tag" wx:if="{{parentitem.type==2}}">多选</text>{{parentitem.question}}</view><radio-group data-id="{{parentitem.question_id}}" class="radio-group" wx:if="{{parentitem.type==1}}" bindchange="radioChange"><label class="radio" wx:for="{{parentitem.answers}}" wx:for-item="subitem"><radio color="#ff5267" value="{{subitem.answer_id}}"/>{{subitem.sequence}}、{{subitem.answer}}</label></radio-group><checkbox-group data-id="{{parentitem.question_id}}" wx:elif="{{parentitem.type==2}}" bindchange="checkboxChange"><label class="checkbox" wx:for="{{parentitem.answers}}" wx:for-item="item"><checkbox color="#ff5267" value="{{item.answer_id}}"/>{{item.sequence}}、{{item.answer}}</label></checkbox-group></view><view class="paper-tab"><button disabled="{{questionIndex==0}}" class="{{questionIndex==0?'prev':'prev active'}}" bindtap="prev">上一题</button><block wx:if="{{questionIndex==questionList.length-1}}"><button class="next active" formType="submit">交卷</button></block><block wx:else><button class="next active" bindtap="next">下一题</button></block></view></form><view class="{{layer?'mask':'mask none'}}"></view><view class="{{layer?'layer':'layer none'}}"><view class="layer-tips">是否提交试卷</view><view class="cancel layer-btn" bindtap="closeLayer">取消</view><view class="ok layer-btn" bindtap="submitResult">交卷</view></view></block>