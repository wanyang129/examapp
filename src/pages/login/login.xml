<image class="logo" src="/img/logo.png"></image>
<form bindsubmit="formSubmit">
	<input type="text" name="openid" class="none" value="{{openid}}"/>
	<view class="form-item">
		<image class="{{disabled?'icon':'icon none'}}" src="/img/icon_name_n.png"></image>
		<image class="{{disabled?'icon none':'icon'}}" src="/img/icon_name_s.png"></image>
		<input type="text" placeholder="请输入用户名" name="username" bindinput="inputName"/>
	</view>
	<view class="form-item">
		<image class="{{disabled?'icon':'icon none'}}" src="/img/icon_mima_n.png"></image>
		<image class="{{disabled?'icon none':'icon'}}" src="/img/icon_mima_s.png"></image>
		<input type="text" password="true" placeholder="密码" name="password" bindinput="inputPass"/>
	</view>
	<view class="{{reason?'reason':'reason none'}}">账号或密码错误</view>
	<button formType="submit" class="{{disabled?'':'active'}}" disabled="{{disabled}}">登录</button>
</form>
<view class="tips">程序仅供尚德员工内部使用</view>